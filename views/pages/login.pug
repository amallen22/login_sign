extends ../layout

block content
  .flex-item.log-in 
    h1 login
    form(action='/login',method='POST')
      .form-group
        label Mail
        input.form-control(type='mail', name='mail', placeholder='Your email', autofocus)   
      .form-group
        label Password
        input.form-control(type='password', name='pass', placeholder='Password')
      button.btn.btn-default(type='submit') Login

    a(href="/sign-up") Sign up